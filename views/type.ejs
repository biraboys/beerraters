<%- include header.ejs %>
<div id="type-color-container" class="vw-100 h-40" style="background-color: <%= type.color_code %>;">
 <div class="container">
   <div class="row">
         <% if (type === undefined) { %>
          <div class="one-half column">
            <h1 class="hero-heading">Sorry could not found type</h1>
          </div>
            <% } else { %>
            <div class="two-thirds column mt-10">
              <div class="card type-card">
                <div class="card-header">
                  <h1><%= type.name %></h1>  
                <div class="card-body">
                  <h4>Description</h4>
                  <p><%= type.description %><p>
                  <h4>History</h4>
                  <p><%= type.history %><p>
                </div>
              </div>
              </div>
            </div>
            <div class="one-third column mt-10">
              <div class="card type-card ta-center">
                <div class="card-header">
                  <div class="card-title">ABV</div>
                </div>
                <div class="card-body">
                  <%= type.ABV %>
                </div>             
              </div>
              <div class="card type-card ta-center">
                <div class="card-header">
                  <div class="card-title">COLOR</div>
                  <div class="card-body">
                    <div class="row">
                      <div class="two columns">
                        <div class="h-2 type-color-box" style="background-color: #F8F753;"></div>
                      </div>  
                      <div class="two columns">
                        <div class="h-2 type-color-box" style="background-color: #F6F513;"></div>
                      </div>
                      <div class="two columns">
                        <div class="h-2 type-color-box" style="background-color: #ECE61A;"></div>
                      </div>
                      <div class="two columns">
                        <div class="h-2 type-color-box" style="background-color: #D5BC26;"></div>
                      </div>
                      <div class="two columns">
                        <div class="h-2 type-color-box" style="background-color: #BF923B;"></div>
                      </div>
                      <div class="two columns">
                        <div class="h-2 type-color-box" style="background-color: #BF813A;"></div>
                      </div>
                    </div>
                  </div>
                    <div class="card-body mt-1">
                    <div class="row">
                      <div class="two columns">
                        <div class="h-2 type-color-box" style="background-color: #BC6733;"></div>
                      </div>
                      <div class="two columns">
                        <div class="h-2 type-color-box" style="background-color: #8D4C32;"></div>
                      </div>
                      <div class="two columns">
                        <div class="h-2 type-color-box" style="background-color: #5D341A;"></div>
                      </div>
                      <div class="two columns">
                        <div class="h-2 type-color-box" style="background-color: #261716;"></div>
                      </div>
                      <div class="two columns">
                        <div class="h-2 type-color-box" style="background-color: #0F0B0A;"></div>
                      </div>
                      <div class="two columns">
                        <div class="h-2 type-color-box" style="background-color: #080707;"></div>
                      </div>
                    </div>
                    </div>
                    <div class="card-body mt-1">
                    <div class="row">
                      <div class="two columns">
                        <div class="h-2 type-color-box" style="background-color: #030403;"></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card type-card ta-center">
                <div class="card-header">
                  <div class="card-title">MEASUREMENTS</div>
                </div>
                <div class="card-body">
                  SRM: <%= type.SRM %>
                  EBC: <%= type.EBC %>
                </div>             
              </div>
            </div>
      <% } %>  
   </div>
 </div>
 </div>

<script src="/js/displayTypeColor.js"></script>
<%- include footer.ejs %>
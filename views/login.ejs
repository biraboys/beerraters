<%- include header.ejs %>
<section class="main-section">
  <div class="container">

    <!-- Modal Structure -->
    <div id="modal" class="modal">
      <div class="modal-content">
        <h4>Remove my account</h4>
        <p>Are you sure you want to remove your account?</p>
      </div>
      <div class="modal-footer">
        <a id="no" class="modal-action modal-close waves-effect waves-red btn-flat">No</a>
        <a id="yes" class="modal-action modal-close waves-effect waves-green btn-flat">Yes</a>
      </div>
    </div>

    <div class="row">
      <div class="col s12 m6">
        <h4>Login</h4>
        <p><a href="/forgot">Forgot password?</a></p>
        <p><a href="/resend">Resend activation mail?</a></p>
      </div>
      <div class="col s12 m6">
        <div class="card">
          <div class="card-content">
            <form name="login">
              <div class="row">
                <div class="col s12">
                  <div class="row">
                    <div class="input-field s12">
                      <i class="material-icons prefix">account_circle</i>
                      <input id="username" type="text" name="username" class="validate" required autofocus>
                      <label id="username-msg" for="username" data-error>Username</label>
                    </div>
                    <div class="input-field s12">
                      <i class="material-icons prefix">security</i>
                      <input id="password" type="password" name="password" class="validate" required>
                      <label id="password-msg" for="password" data-error>Password</label>
                    </div>
                  </div>
                  <button id="login-btn" class="btn waves-effect waves-light" type="submit">Submit</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include footer.ejs %>

<script src="/js/login.js"></script>

</body>
</html>
<%- include header.ejs %>

<section class="main-section">
  <div class="container">
    <div class="card">
      <div class="card-content">
        <form id="form-forgot">
          <h5>Forgot password</h5>
          <div class="row">
            <div class="col s6">
              <div class="row">
                <div class="input-field col s12">
                  <input type="email" name="currentpass" class="validate" id="email" required>
                  <label for="currentpass" data-error="Wrong" id="forgot">Enter your email</label>
                </div>
              </div>
            </div>
          </div>
          <button class="btn waves-effect waves-light" type="submit">Submit</button>
        </form>
      </div>
    </div>
  </div>
</section>

<%- include footer.ejs %>

<script src="/js/forgot.js"></script>

</body>
</html>
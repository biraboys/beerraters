<%- include header.ejs %>

<div class="section hero">
 <div class="container">
   <div class="row">
				<form action="/search/beers" method="GET" role="search" name="searchForm">
					<div class="row">
						<label for="word">What are you after?</label>
						<input class="u-full-width" type="text" placeholder="Search..." name="q" required>
					</div>
					<label for="word">Find</label>
					<div class="row">
						<div class="one-third column">
							<a class="button button-primary search-btn" id="beer-search-btn">Beer</a>
						</div>
						<div class="one-third column">
							<a class="button search-btn" id="brewery-search-btn">Brewery</a>
						</div>
						<div class="one-third column">
							<a class="button search-btn" id="user-search-btn">User</a>
						</div>
					</div>
				</form>
				</div>
				 <div class="row">
		<% if (beers.length < 1) { %>
				<h1 class="hero-heading">Sorry, could not find beer <strong>"<%= beerName %>"</strong></h1>
				<p>Add this beer to our database <a href="/addbeer">here!</a></p>
                <% } else { %>
				 <h4 class="hero-heading" id="search-results">Results for <strong>"<%= beerName %>"</strong> </h4>
                <% beers.forEach(function(beer){ %>
                	<h1 class="hero-heading"><a href="/beers/<%= beer._id %>"><%= beer.name %></a></h1>
                    <% }); %>
                <% } %>
			</div>
   </div>
 </div>
</div>

<%- include footer.ejs %>
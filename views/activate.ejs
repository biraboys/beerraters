<%- include header.ejs %>

<section class="main-section">
  <div class="container">
    <div class="card">
      <div class="card-content">
        <form id="form-activate-account">
          <h5>Please enter a password to activate your account</h5>
          <div class="row">
            <div class="col s6">
              <div class="row">
                <div class="input-field col s12">
                  <input type="password" name="password" class="validate" id="password" title="Password needs to have at least one lower case, one uppercase, one number, one special character, and must be at least 8 characters but no more than 35." pattern="^(?=.*?[a-z])(?=.*?[A-Z])(?=.*?[\d])(?=.*?[\W]).{8,35}$" required>
                  <label for="password" data-error="Wrong" data-success>New password</label>
                </div>
                <div class="input-field col s12">
                  <input type="password" name="confirmpass" class="validate" id="confirmpass" title="Password needs to have at least one lower case, one uppercase, one number, one special character, and must be at least 8 characters but no more than 35." pattern="^(?=.*?[a-z])(?=.*?[A-Z])(?=.*?[\d])(?=.*?[\W]).{8,35}$" required>
                  <label id="confirmpass-msg" for="confirmpass" data-error="Wrong" data-success>Confirm password</label>
                </div>
              </div>
              <button id="submit-btn" class="btn waves-effect waves-light" type="submit">Submit</button>
            </div>
            <div class="col s6">
              <div id="loading-container" class="preloader-wrapper small">
                <div class="spinner-layer spinner-green-only">
                  <div class="circle-clipper left">
                    <div class="circle"></div>
                  </div><div class="gap-patch">
                    <div class="circle"></div>
                  </div><div class="circle-clipper right">
                    <div class="circle"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<%- include footer.ejs %>

<script src="/js/activate.js"></script>

</body>
</html>
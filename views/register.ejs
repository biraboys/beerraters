<%- include header.ejs %>
<section class="main-section">
<div class="container">
  <div class="row">
    <div class="col s6">
      <h4 id="register-heading">Register</h4>
      <p>Join the web's largest beer community today!</p>
    </div>
    <div class="col s6">
      <!-- Modal Structure -->
      <div id="modal" class="modal">
        <div class="modal-content">
          <h4>Thanks for registering to beerraters!</h4>
          <p id="modal-text"></p>
        </div>
      </div>
      <form name="register">
        <div class="input-field">
          <i class="material-icons prefix">face</i>
          <input id="name" type="text" class="validate" name="name" autofocus>
          <label for="name">Full Name</label>
        </div>
        <div class="input-field">
          <i class="material-icons prefix">account_circle</i>
          <input id="username" type="text" class="validate" name="username" required pattern="^[a-zA-Z0-9]{3,25}$" title="Username must contain letters and numbers only.">
          <label id="username-msg" for="username" data-error="Wrong">Username</label>
        </div>
        <div class="input-field">
          <i class="material-icons prefix">email</i>
          <input id="email" type="email" class="validate" name="email" required>
          <label id="email-msg" for="email" data-error="Wrong">Email</label>
        </div>
        <div class="input-field">
          <i class="material-icons prefix">security</i>
          <input type="password" name="password" class="validate" id="password" title="Password needs to have at least one lower case, one uppercase, one number, one special character, and must be at least 8 characters but no more than 35." pattern="^(?=.*?[a-z])(?=.*?[A-Z])(?=.*?[\d])(?=.*?[\W]).{8,35}$" required>
          <label for="password" data-error="Wrong" id="newpassmsg">Password</label>
        </div>
        <div class="input-field">
          <i class="material-icons prefix">location_on</i>
          <select class="icons" id="country" name="country" required>
          <option value="" disabled selected>Select country</option>
          <% countries.forEach(function(country) { %>
            <option value="<%= country._id %>" data-icon="/images/flags/<%= country.flag %>" class="flag-img left valign-wrapper"><%= country.name %></option>
          <% }); %>
          </select>
          <label for="country">Country</label>
        </div>
        <button class="btn waves-effect waves-light" id="register-btn" type="submit" name="action">Register</button>
      </form>
    </div>
  </div>
</div>

</section>

<%- include footer.ejs %>

<script>
$(document).ready(function () {
  $('select').material_select()
})
</script>
<script src="/js/register.js"></script>
</body>
</html>
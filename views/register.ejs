<%- include header.ejs %>

<div class="container register-form">
  <div class="six columns">
    <h4>Register</h4>
    <form name="register">
      <label for="username">Username:</label>
      <input class="u-full-width" type="text" name="username" id="username" required title="Username must contain letters and numbers only.">
      <span id="usernameMsg"></span>
      <label for="name">Full name:</label>
      <input class="u-full-width" type="text" name="name" id="name" required title="Name must be at least 3 characters, max 30, no special characters or numbers, must have space in between name.">
      <label for="email">Email:</label>
      <input class="u-full-width" type="text" name="email" id="email" required >
      <span id="emailMsg"></span>
      <label for="password">Password:</label>
      <input class="u-full-width" type="password" name="password" id="password" required title="Password needs to have at least one lower case, one uppercase, one number, one special character, and must be at least 8 characters but no more than 35.">
      <span id="passwordMsg"></span>
      <select class="u-full-width" id="country" name="country" required>
        <option value="" disabled selected>Select country</option>
      </select>
      <input class="button-primary" type="submit" value="Register" id="register-btn">
    </form>
  </div>
</div>

<%- include footer.ejs %>

<script src="/js/register.js"></script>
</body>
</html>
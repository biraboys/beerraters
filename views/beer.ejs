<%- include header.ejs %>

<div class="section hero">
 <div class="container">
   <div class="row">
         <% if (beer === undefined) { %>
          <div class="one-half column">
            <h1 class="hero-heading">Sorry could not found beer</h1>
          </div>
            <% } else { %>
          <div class="one-half column">
             <h1 class="hero-heading"><%= beer.name %></h1>
             <h1 class="hero-heading"><%= beer.brewery_id %></h1>
             <p class=""><%= beer.description %></p>
     </div>
     <div class="one-half column">
       <img class="u-max-full-width" src="/images/beer.png">
     </div>
      <% } %>  
   </div>
 </div>
</div>

<%- include footer.ejs %>
<%- include header.ejs %>
<% if (!session) { %>
  <section class="intro-section">
    <div class="container">
      <div class="row">
        <div class="col s12 m6">
          <img class="responsive-img" src="/images/logo_placeholder.png"/>
        </div>
        <div class="col s12 m6">
          <h2>BeerRaters</h2>
          <h5>Your beer community on the web</h5>
          <p>BeerRaters is currently in a beta staged. We appreciate all your feedback to make it better.</p>          
          <a href="/register" id="download-button" class="btn-large waves-effect waves-light mt-1">Sign Up</a>
        </div>  
      </div>
    </div>
    </section>
    <section class="intro-section bgc-white">
      <div class="container">
      <div class="row">
        <div class="col s12 m4">
          <div class="card">
            <div class="card-content">
              <div class="icon-block">
                <h2 class="center"><i class="material-icons">share</i></h2>
                <h5 class="center">Share</h5>
                <p class="light">Share beers with your friends and other beerdrinkers at Beerraters.</p>
              </div>
            </div>
          </div>
        </div>
        <div class="col s12 m4">
          <div class="card">
            <div class="card-content">
              <div class="icon-block">
                <h2 class="center"><i class="material-icons">add_circle_outline</i></h2>
                <h5 class="center">Add beers</h5>
                <p class="light">We have over 6000 beers in our database, you can easily add beers to our databse if we dont have it.</p>
              </div>
            </div>
          </div>
        </div>
        <div class="col s12 m4">
          <div class="card">
            <div class="card-content">
              <div class="icon-block">
                <h2 class="center"><i class="material-icons">data_usage</i></h2>
                <h5 class="center">Contributions</h5>
                <p class="light">Follow your friends and other community members on Beerraters to see their contributions.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>
  </section>
  <section class="intro-section">
    <div class="container">
      <div class="row">
        <div class="col s12 m12">
          <h4 class="ta-center">Help Us Get Better!</h4>
          <h6 class="ta-center"><a href="/register">Sing up</a> or <a href="/login">login</a> and give us feedback on how we can improve.</h6>        
        </div>  
      </div>
    </div>
  </section>
  <section class="intro-section bgc-white">
      <div class="container">
        <h4 class="ta-center">Upcoming Features</h4>
      <div class="row">
        <div class="col s12 m4">
          <div class="card">
            <div class="card-content">
              <div class="icon-block">
                <h2 class="center"><i class="material-icons">accessibility</i></h2>
                <h5 class="center">Accessability</h5>
                <p class="light">Everyone likes beeer! Our main priority is to make BeerRaters accessable for everyone.</p>
              </div>
            </div>
          </div>
        </div>
    </div>
    </div>
    </section>
<% } else { %>
<section class="main-section">
  <div class="container">
    <div class="row">
      <div class="col s12 m12 l8 card">
        <div class="card-content">
          <span class="card-title" id="feed-info-card-title">
            <h3>Feed <span class="new badge" id="new-feed-counter">0</span></h3>
          </span>
          <p>Here you can see all the actions of the users that you follow. Feed items will automatically be removed after one week.</p>          
        </div>
      </div>
        <div class="col s12 m12 l4">
          <div class="card">
            <ul class="collapsible" data-collapsible="accordion">
              <li>
                <div class="collapsible-header active">
                  Following
                  <span class="card-subtitle">
                     (<span id="following-amount"></span>)
                  </span>
                  <i class="material-icons right">chevron_right</i>
                </div>
                <div class="collapsible-body p-0">
                  <ul class="collection" id="following-list">
                  </ul>
                </div>
              </li>
            </ul>
          </div>
      </div>           
    </div>
    <div class="row" id="activity-list">
    </div>      
  </div>
</section>
 <% } %>

<%- include footer.ejs %>

<% if (session) { %>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/feed.js"></script>
  <% } %>
</body>
</html>
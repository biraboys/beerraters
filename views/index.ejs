<%- include header.ejs %>
<% if (!session) { %>
  <section class="intro-section">
    <div class="container">
      <div class="row">
        <div class="col s12 m6">
          <img class="responsive-img" src="/images/logo_placeholder.png"/>
        </div>
        <div class="col s12 m6">
          <h2>BeerRaters</h2>
          <h5>Let's drink beers together!</h5>
          <p>Share your beer experiences with fellow drinkers and discover new tasty treats.</p>                    
          <p>BeerRaters is currently in a beta stage. Together we can make it better so be sure to leave us your <a class="beerraters-link" href="/contact">feedback.</a></p>          
          <a href="/register" id="download-button" class="btn-large waves-effect waves-light mt-1">Sign Up</a>
        </div>  
      </div>
    </div>
    </section>
    <section class="intro-section bgc-white">
      <div class="container">
      <div class="row">
        <div class="col s12 m4">
          <div class="card intro-card">
            <div class="card-content">
              <div class="icon-block">
                <h2 class="center"><i class="material-icons">share</i></h2>
                <h5 class="center">Share</h5>
                <p class="light">Let others know what you are drinking. Together we can make Beerraters a great community.</p>
              </div>
            </div>
          </div>
        </div>
        <div class="col s12 m4">
          <div class="card intro-card">
            <div class="card-content">
              <div class="icon-block">
                <h2 class="center"><i class="material-icons">search</i></h2>
                <h5 class="center">Discover</h5>
                <p class="light">Find your new friday treat among our 6000 beers. Missing something? Just add it.</p>
              </div>
            </div>
          </div>
        </div>
        <div class="col s12 m4">
          <div class="card intro-card">
            <div class="card-content">
              <div class="icon-block">
                <h2 class="center"><i class="material-icons">rss_feed</i></h2>
                <h5 class="center">Feed</h5>
                <p class="light">Follow other community members to see what they are drinking and get live updates in your feed.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>
  </section>
  <section class="intro-section">
    <div class="container">
      <div class="row">
        <div class="col s12 m12">
          <h4 class="ta-center">Help Us Get Better!</h4>
          <h6 class="ta-center"><a class="beerraters-link" href="/register">Sign up</a> or <a class="beerraters-link" href="/login">login</a> and give us feedback on how we can improve.</h6>        
        </div>  
      </div>
    </div>
  </section>
  <section class="intro-section bgc-white">
      <div class="container">
        <h4 class="ta-center">Upcoming Features</h4>
      <div class="row">
        <div class="col s12 m4">
          <div class="card intro-card">
            <div class="card-content">
              <div class="icon-block">
                <h2 class="center"><i class="material-icons">accessibility</i></h2>
                <h5 class="center">Accessibility</h5>
                <p class="light">Everyone likes beer! Our main priority is to make BeerRaters accessible for everyone.</p>
              </div>
            </div>
          </div>
        </div>
    </div>
    </div>
    </section>
<% } else { %>
<section class="main-section">
  <div class="container">
    <div class="row">
      <div class="col s12 m12 l8 card">
        <div class="card-content">
          <span class="card-title" id="feed-info-card-title">
            <h3>Feed</h3>
          </span>
          <p>Here you can see all the actions of the users that you follow. Feed items will automatically be removed after one week.</p>          
        </div>
      </div>
        <div class="col s12 m12 l4">
          <div class="card">
            <ul class="collapsible" data-collapsible="accordion">
              <li>
                <div class="collapsible-header active">
                  Following
                  <span class="card-subtitle">
                     (<span id="following-amount"></span>)
                  </span>
                  <i class="material-icons right">chevron_right</i>
                </div>
                <div class="collapsible-body p-0">
                  <ul class="collection" id="following-list">
                  </ul>
                </div>
              </li>
            </ul>
          </div>
      </div>           
    </div>
    <div class="row" id="activity-list">
    </div>      
  </div>
</section>
 <% } %>

<%- include footer.ejs %>

<% if (session) { %>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/feed.js"></script>
  <% } %>
</body>
</html>